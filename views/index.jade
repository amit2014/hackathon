#home
  #background
    img(src="/images/layout.gif", border=0)
  #header
    form#form
      #locationbar
        input(type='text', id='loc_search', placeHolder="Enter address or postal code")
      #searchbar
        input(type='text', id='txt_search', placeHolder="What are you looking for?")
      #makenew
        input(type='submit', id='home_submit')
        a(href='/new')
          img(src="/images/newpost.gif",width="90",height="28",border="0")


  #filterbar
    form.
        <input onclick="functionA(0)" type="checkbox" name="filter" value="Events" /> <img src="/images/events.gif" width="14" height="14" border="0" /> Events <br />
        <input onclick="functionA(1)" type="checkbox" name="filter" value="Marketplace" /> <img src="/images/marketplace.gif" width="14" height="14" border="0" /> Marketplace <br />
