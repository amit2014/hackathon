        <input onclick="functionA(4)" type="checkbox" name="filter" value="Jobs" /> <img src="/images/jobs.gif" width="14" height="14" border="0" /> Jobs

  #list
    #mcs3_container
      .customScrollBox
        div.container
          .content
            if (deals)
              each deal in deals
                if (deal.source)
                  #listitem
                    a(href='/deals/#{deal.id}')= deal.source
          div.dragger_container
            div.dragger

  #mapspace
    #map
      #map_canvas.big_maps(style='width:100%; height:100%')

